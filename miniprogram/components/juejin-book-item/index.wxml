<!--components/juejin-book-item/index.wxml-->
<view class="container">
  <view class="image-view">
    <image class="image" src="{{book.bookImage}}"></image>
  </view>

  <view class="content">
    <view class="content__row">
      <text class="name">{{book.title}}</text>
    </view>

    <view class="content__row">
      <text class="teacher">{{book.userData.username}}</text>
    </view>


    <view class="content__row sell-summary">
      <view>
        <text>{{book.lastSectionCount}}小节</text>
      </view>

      <view class="title-buy-text">
        <text>{{book.buyCount}}</text>
        <text>人已购买</text>
      </view>

      <view class="price-tag">
        <text class="price">¥{{book.price}}</text>
      </view>
    </view>

    <view class="content__row fanxian-summary">
      <view>
        <text>返现</text>
        <text>¥{{book.brokerage}}</text>
      </view>

      <text class="copy-link" bindtap="onClickBuy" data-image="{{book.postImage}}" data-brokerage="{{book.brokerage}}" data-title="{{book.title}}">扫码购买</text>
    </view>
  </view>
</view>