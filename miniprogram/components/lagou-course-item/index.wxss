/* pages/lagou/index.wxss */

.container {
  display: flex;
  padding: 0 40rpx 60rpx;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.image-view {
  width: 190rpx;
  height: 260rpx;
}

.image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.content {
  margin-left: 40rpx;
  flex: 1;
}

.name {
  font-size: 25rpx;
  color: #333;
  font-weight: 500;
  line-height: 44rpx;
}

.brief {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #666;
  margin-top: 14rpx;
}

.teacher {
  margin-top: 12rpx;
}

.tag {
  font-size: 24rpx;
  background: #f8f9fa;
  padding: 6rpx 10rpx;
  border-radius: 4rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 40rpx;
}

.tag + .tag {
  margin-left: 10rpx;
}

.sell-summary {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.activity-name {
  font-size: 24rpx;
  display: inline-block;
  font-weight: 500;
  color: #ff7452;
  line-height: 34rpx;
  padding: 2rpx 8rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
  border: 1px solid rgba(255, 116, 82, 0.5);
}

.discout-price-symbol {
  font-size: 24rpx;
  color: #ff7452;
  font-weight: 600;
}

.discout-price-value {
  font-size: 32rpx;
  color: #ff7452;
  font-weight: 700;
}

.default-price-symbol {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.default-price-value {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.title-buy-text {
  font-size: 24rpx;
  color: #999;
  display: inline-block;
  margin-left: 30rpx;
  font-weight: 400;
}

.fanxian-summary {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #e5a817;
  margin-top: 20rpx;
}
